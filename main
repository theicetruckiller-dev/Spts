-- Vars
local ringVisible = false
local running = false
local clickDelay = 0.10
local infiniteJump = false

-- Ring GÃ¶ster/Gizle
ringBtn.MouseButton1Click:Connect(function()
    ringVisible = not ringVisible
    ring.Visible = ringVisible
end)

-- Clicker BaÅŸlat/Durdur
clickerBtn.MouseButton1Click:Connect(function()
    running = not running
    clickerBtn.Text = running and "Clicker: AÃ§Ä±k" or "Clicker: KapalÄ±"
end)

-- Sonsuz click dÃ¶ngÃ¼sÃ¼ (Ringâ€™in tam ortasÄ±na!)
spawn(function()
    while true do
        if running and ringVisible then
            local spd = tonumber(speedBox.Text) or 100
            -- RING'Ä°N EKRANDAN DÃœNYAYA POZÄ°SYONUNU AL:
            local viewportPos = ring.AbsolutePosition + (ring.AbsoluteSize/2)
            -- Mobilde "mouse1click" varsa, mouse'u ring'in Ã¼stÃ¼ne Ã§ek ve tÄ±kla:
            if mousemoverel and mouse1click then
                -- Sadece PC iÃ§in: mouse'u ring'in ortasÄ±na taÅŸÄ±r ve tÄ±klar
                local cx, cy = workspace.CurrentCamera.ViewportSize.X, workspace.CurrentCamera.ViewportSize.Y
                local moveX = viewportPos.X - (cx/2)
                local moveY = viewportPos.Y - (cy/2)
                mousemoverel(moveX, moveY)
                wait(0.02)
                mouse1click()
                wait(0.02)
                mousemoverel(-(moveX), -(moveY))
            elseif mouse1click then
                mouse1click()
            end
            -- EÄŸer bunlar Ã§alÄ±ÅŸmazsa: Halka'nÄ±n Ã¼stÃ¼ndeki tÄ±klama eventini tetikle
            ring:Activate()
            wait(math.max(spd/1000,0.01))
        else
            wait(0.1)
        end
    end
end)

-- Infinite Jump (Yere her deÄŸdiÄŸinde bir kere zÄ±platÄ±r, uzaya uÃ§urmaz!)
local lastJump = tick()
RunService.RenderStepped:Connect(function()
    if infiniteJump then
        local char = player.Character
        if char and char:FindFirstChildOfClass("Humanoid") then
            local humanoid = char:FindFirstChildOfClass("Humanoid")
            if humanoid:GetState() == Enum.HumanoidStateType.Landed then
                if tick() - lastJump > 0.08 then
                    humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
                    lastJump = tick()
                end
            end
        end
    end
end)

jumpBtn.MouseButton1Click:Connect(function()
    infiniteJump = not infiniteJump
    jumpBtn.Text = infiniteJump and "Infinite Jump: AÃ§Ä±k" or "Infinite Jump: KapalÄ±"
end)
