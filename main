-- Infinite Jump Butonu
local jumpBtn = Instance.new("TextButton", panel)
jumpBtn.Size = UDim2.new(0,170,0,30)
jumpBtn.Position = UDim2.new(0,14,0,120)
jumpBtn.BackgroundColor3 = Color3.fromRGB(80,70,180)
jumpBtn.Text = "Infinite Jump: KapalÄ±"
jumpBtn.TextColor3 = Color3.fromRGB(230,230,255)
jumpBtn.Font = Enum.Font.GothamBold
jumpBtn.TextSize = 15

-- Clicker Logic
local running = false

clickerBtn.MouseButton1Click:Connect(function()
    running = not running
    clickerBtn.Text = running and "Clicker: AÃ§Ä±k" or "Clicker: KapalÄ±"
    if running then
        spawn(function()
            while running do
                local spd = tonumber(speedBox.Text) or 100
                local multi = tonumber(multiBox.Text) or 1
                for i=1, multi do
                    -- GerÃ§ek tÄ±klama: Executor destekliyorsa doÄŸrudan!
                    if mouse1click then
                        mouse1click()
                    elseif mouse1press and mouse1release then
                        mouse1press()
                        wait(0.02)
                        mouse1release()
                    end
                end
                wait(math.max(spd/1000, 0.01))
            end
        end)
    end
end)

-- Infinite Jump Logic
local infiniteJump = false
jumpBtn.MouseButton1Click:Connect(function()
    infiniteJump = not infiniteJump
    jumpBtn.Text = infiniteJump and "Infinite Jump: AÃ§Ä±k" or "Infinite Jump: KapalÄ±"
end)

UserInputService.JumpRequest:Connect(function()
    if infiniteJump then
        local char = player.Character
        if char and char:FindFirstChildOfClass("Humanoid") then
            -- Her zÄ±plama tuÅŸuna sonsuz izin!
            char:FindFirstChildOfClass("Humanoid"):ChangeState(Enum.HumanoidStateType.Jumping)
        end
    end
end)
